.message-content__box
  .message-content__box__field
    .message-content__box__field__user-name
      = message.user.name
    .message-content__box__field__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-box
    - if message.content.present?
      %p.Message__content
      = message.content
    = image_tag message.image.url, class: 'message-box__image' if message.image.present?