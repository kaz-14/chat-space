.Chat-main
  .Chat-main__group-info
    .group-name
      .group-name__index
        .group-name__index--text
          = @group.name
        .group-name__index--memmber 
          Member :
          %ul
            - @group.users.each do |user|
              %li= user.name
    .group-name__edit
      = link_to "Edit", edit_group_path(@group), class: "group-name__edit--btn"
  .Chat-main__message-list
    = render @messages
  .Chat-main__message-form
    .form-contents
      = form_with model: [@group, @message], html: {class: "form-contents__area"}, local: true do |f|
        .form-contents__box
          = f.text_field :content, class: 'form-contents__box--text', placeholder: 'type a message'
          = f.label :image, class: 'form-contents__box--image' do
            = icon('far', 'image')
            = f.file_field :image, class: 'form-contents__box--file'
        = f.submit 'Send', class: 'form-contents__btn'